<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tr.nsergey.accountingUserApp.StartScreen">

    <TextView
        android:id="@+id/infoTextViewSS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingRight="16dp"
            android:background="@color/colorPrimary"
            android:gravity="left"
            android:textColor="#ffffff"
            android:text=""/>
        <Button
            android:id="@+id/addQtyButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="24"
            android:layout_margin="16dp"
            android:background="@drawable/button_effect"
            android:textSize="30sp"
            android:text="@string/addToWh" />

        <Button
            android:id="@+id/removeQtyButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="24"
            android:layout_margin="16dp"
            android:background="@drawable/button_effect"
            android:textSize="30sp"
            android:text="@string/takeFromWh" />

        <Button
            android:id="@+id/remainsButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="24"
            android:layout_margin="16dp"
            android:background="@drawable/button_effect"
            android:textSize="30sp"
            android:text="@string/inputRemainings" />

        <Button
            android:id="@+id/checkButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="24"
            android:layout_margin="16dp"
            android:background="@drawable/button_effect"
            android:textSize="30sp"
            android:text="@string/checkQty" />
    </LinearLayout>
</RelativeLayout>
