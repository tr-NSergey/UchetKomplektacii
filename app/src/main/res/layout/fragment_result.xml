<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.ResultScreen">
    <TextView
        android:id="@+id/infoTextViewRS"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_margin="16dp"/>
    <Button
        android:id="@+id/toMainScreen"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="130dp"
        android:layout_margin="16dp"
        android:textSize="30sp"
        android:background="@drawable/button_effect"
        android:text="@string/backToMain" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewRS"
        android:layout_below="@id/infoTextViewRS"
        android:layout_above="@id/toMainScreen"
        android:layout_width="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:scrollbars="vertical"
        android:layout_height="0dp" />
</RelativeLayout>
